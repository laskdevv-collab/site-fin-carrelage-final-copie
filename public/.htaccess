# ========================================
# Configuration SEO - Force HTTPS
# ========================================

RewriteEngine On

# Force la redirection HTTPS
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ========================================
# Gestion du Favicon (icon.ico)
# ========================================

# Next.js gère automatiquement les favicons via src/app/icon.ico et src/app/apple-icon.png
# Les fichiers sont servis automatiquement à /icon.ico et /apple-icon.png

# ========================================
# Optimisations SEO supplémentaires
# ========================================

# Supprime le slash final
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^(.+)/$ /$1 [R=301,L]

# ========================================
# Sécurité
# ========================================

Options -Indexes

# Protection des fichiers sensibles (Apache 2.4+)
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
  Require all denied
</FilesMatch>

# Compatibilité Apache 2.2 (si nécessaire, commentez la section ci-dessus et décommentez ci-dessous)
# <FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
#   Order Allow,Deny
#   Deny from all
# </FilesMatch>

# ========================================
# Performance et Cache
# ========================================

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images (Général)
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # Favicon - Cache modéré pour permettre les mises à jour
  ExpiresByType image/x-icon "access plus 1 week"
  ExpiresByType image/vnd.microsoft.icon "access plus 1 week"
  
  # CSS et JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  
  # HTML
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>